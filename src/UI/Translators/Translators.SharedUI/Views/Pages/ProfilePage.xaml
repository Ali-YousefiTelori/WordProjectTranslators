<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Translators.ViewModels.Pages;assembly=Translators.ViewModels"
             x:Class="Translators.UI.Views.Pages.ProfilePage">
    <ContentPage.Resources>
        <viewmodels:ProfilePageViewModel x:Key="ProfilePageViewModel" />
    </ContentPage.Resources>
    <ContentPage.BindingContext>
        <Binding Source="{StaticResource ProfilePageViewModel}"/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid>
            <StackLayout VerticalOptions="Center">
                <Label Text="خوش آمدید"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
                <Label Text="{Binding UserName}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
                <Button Text="ثبت نام" IsVisible="{Binding CanRegister}" Command="{Binding RegisterCommand}"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>